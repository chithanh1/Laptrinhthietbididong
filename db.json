import 'dart:convert';
import 'dart:ffi';
class Post {
  Post({
    required this.id,
    required this.title,
    required this.body,
    required this.base64Image,
  });

  final int id; // Loại bỏ nullable nếu trường luôn required
  final String title;
  final String body;
  final String base64Image;

  // Hàm chuyển đổi từ JSON sang đối tượng Post
  factory Post.fromJson(Map<String, dynamic> json) {
    return Post(
      id: json["id"] ?? 0, // Giá trị mặc định nếu null
      title: json["title"] ?? '',
      body: json["body"] ?? '',
      base64Image: json["base64Image"] ?? '',
    );
  }

  // Hàm chuyển đổi từ đối tượng Post thành JSON
  Map<String, dynamic> toJson() => {
        "id": id,
        "title": title,
        "body": body,
        "base64Image": base64Image,
      };
}
